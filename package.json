{
  "name": "shopify-theme-custom-ext",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "shopify": "shopify",
    "build": "npm-run-all clean copy -p 'build:*'",
    "build:shopify": "shopify app build",
    "build:sass": "cross-env NODE_ENV=development npm-run-all sass:dev postCss",
    "dev": "npm-run-all -p copy-watch 'dev:*' sass:watch css:watch",
    "dev:shopify": "shopify app dev",
    "info": "shopify app info",
    "generate": "shopify app generate",
    "extension": "shopify app generate extension",
    "deploy": "shopify app deploy",
    "css:watch": "npm-run-all -p sass:watch postCss:watch",
    "sass:watch": "sass ./src/scss:extensions/theme-custom-ext/assets/ --watch",
    "sass:dev": "sass ./src/scss:extensions/theme-custom-ext/assets/ --no-unicode",
    "sass:prd": "sass ./src/scss:extensions/theme-custom-ext/assets/ --no-source-map --no-unicode",
    "postCss": "postcss ./extensions/**/*.css --replace ./extensions/**/*.css --config config/.postcssrc.js",
    "postCss:watch": "postcss ./extensions/**/*.css --base ./extensions/ --dir ./extensions/ --watch --config config/.postcssrc.js",
    "clean": "rimraf ./extensions",
    "copy": "cpx './src/extensions/**/*' './extensions/'",
    "copy-watch": "cpx './src/extensions/**/*' './extensions/' --watch"
  },
  "dependencies": {
    "@shopify/app": "3.49.6",
    "@shopify/cli": "3.49.6"
  },
  "author": "Kazuki Yonemoto (https://dev.to/tim_yone)",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "cssnano": "^6.0.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.51.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-plugin": "^1.0.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "sass": "^1.69.3",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-prettier": "^4.0.2",
    "typescript": "^5.2.2",
    "typesync": "^0.11.1"
  }
}
